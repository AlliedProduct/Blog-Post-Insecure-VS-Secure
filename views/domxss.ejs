<%- include('layout', { body: '' }) %>

<h1>DOM XSS (Secure Version)</h1>

<div id="output"></div>

<script>
  const params = new URLSearchParams(window.location.search);
  const msg = params.get('msg');
  if (msg) {
    // SAFE: textContent does not interpret HTML
    document.getElementById('output').textContent = msg;
  }
</script>
